<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Project Management</display-name>
  <welcome-file-list>
    <welcome-file>template/login.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/template/login.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  

  <servlet>
    <servlet-name>admin</servlet-name>
    <jsp-file>/template/admin.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>admin_projects</servlet-name>
    <jsp-file>/template/admin_projects.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>admin_projects</servlet-name>
    <url-pattern>/admin_projects</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>manager</servlet-name>
    <jsp-file>/template/manager.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>manager</servlet-name>
    <url-pattern>/manager</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>employee</servlet-name>
    <jsp-file>/template/employee.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>employee</servlet-name>
    <url-pattern>/employee</url-pattern>
  </servlet-mapping>

</web-app>